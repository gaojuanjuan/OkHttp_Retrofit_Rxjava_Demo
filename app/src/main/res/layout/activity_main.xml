<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gjj.frame.MainActivity"
    android:padding="20dp">

    <Button
        android:id="@+id/logger_btn"
        style="@style/Button_style"
        android:text="OkHttp日志拦截器Interceptor"/>
    <Button
        android:id="@+id/rxjava_btn"
        style="@style/Button_style"
        android:text="网络请求轮询（无条件）"/>

    <Button
        android:id="@+id/btn_conditional_poll"
        style="@style/Button_style"
        android:text="网络请求轮询（有条件）"/>

    <Button
        android:id="@+id/btn_nested_request"
        style="@style/Button_style"
        android:text="网络请求嵌套回调"/>





</LinearLayout>
